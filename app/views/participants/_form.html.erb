<div id="participant_form" class="space-y-4">
  <%= form_with model: [ event, Participant.new ], data: { turbo: true }, class: "space-y-4" do |f| %>
    <% if participant&.errors&.any? %>
      <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg text-sm">
        <% participant.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= f.label :name, "Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, placeholder: "Jane Doe", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent", required: true %>
      </div>

      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, placeholder: "jane@example.com", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent", required: true %>
      </div>
    </div>

    <div class="flex gap-4">
      <%= render RubyUI::Button.new(type: :submit, variant: :primary) do %>
        Add Participant
      <% end %>
      <%= render RubyUI::Button.new(type: :button, variant: :ghost, data: { action: "click->participant-form#cancel" }) do %>
        Cancel
      <% end %>
    </div>
  <% end %>
</div>
